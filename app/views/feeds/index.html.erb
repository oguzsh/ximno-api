<h1> KeepFit </h1>

<p>Welcome <%= current_user.name.familiar %></p>


<h3> Posts </h3>
<% @posts.each do |post| %>
  <div class="post" style="border:1px solid black;margin:8px;padding:8px;">
    <%= image_tag(post.image, width: 200) if post.image.attached? %>
    <h2><%= post.body %></h2>
    <p><%= post.created_at %></p>
    <p><%= post.user.name.familiar %></p>
    <p>Total Comments: <%= post.comments.count %></p>
  </div>
<% end %>